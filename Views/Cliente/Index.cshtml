@model List<ClienteVm>
@{
    ViewData["Title"] = "Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Clientes</h2>

    <form asp-action="Insertar" method="post">
        <div class="form-group">
            <input type="submit" value="Agregar Cliente" class="btn btn-success">
        </div>
    </form>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Telefono</td>
                            <td>
                                <a href="@Url.Action("Editar", "Cliente", new { clienteId = cliente.ClienteId })" class="btn btn-primary btn-sm">Editar</a>

                                <form method="post" asp-action="Eliminar" asp-route-clienteId="@cliente.ClienteId" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este cliente?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No hay clientes registrados.</p>
    }
