@model IEnumerable<BibliotecaNexus.Data.Domain.Entidades.Cliente>
@{
    ViewData["Title"] = "Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cliente</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClienteId</td>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Email</td>
                <td>@item.Telefono</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger">Eliminar</a>
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
