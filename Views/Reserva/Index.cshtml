@model IEnumerable<BibliotecaNexus.Data.Domain.Entidades.Reserva>
@{
    ViewData["Title"] = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reservas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Reserva</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Libro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservaId</td>
                <td>@item.Cliente.Nombre</td>
                <td>@item.Libro.Titulo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservaId" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.ReservaId" class="btn btn-danger">Eliminar</a>
                    <a asp-action="Details" asp-route-id="@item.ReservaId" class="btn btn-info">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
