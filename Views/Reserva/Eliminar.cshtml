@model BibliotecaNexus.Data.Domain.Entidades.Reserva

@{
    ViewData["Title"] = "Eliminar Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Reserva</h1>

<h4>Reserva</h4>
<hr />
<div>
    <h4>¿Estás seguro de que quieres eliminar esta reserva?</h4>
    <div>
        <h5>ID: @Model.ReservaId</h5>
        <h5>Cliente: @Model.Cliente.Nombre</h5>
        <h5>Libro: @Model.Libro.Titulo</h5>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReservaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
