@model BibliotecaNexus.Data.Domain.Entidades.Prestamo

@{
    ViewData["Title"] = "Eliminar Préstamo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Préstamo</h1>

<h4>Préstamo</h4>
<hr />
<div>
    <h4>¿Estás seguro de que quieres eliminar este préstamo?</h4>
    <div>
        <h5>ID: @Model.PrestamoId</h5>
        <h5>Cliente: @Model.Cliente.Nombre</h5>
        <h5>Libro: @Model.Libro.Titulo</h5>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PrestamoId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
