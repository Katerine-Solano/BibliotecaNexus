@model BibliotecaNexus.Data.Domain.Entidades.Autorizacion

@{
    ViewData["Title"] = "Editar Autorización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Autorización</h1>

<h4>Autorizacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="AutorizacionId" />
            <div class="form-group">
                <label asp-for="Modulo" class="control-label"></label>
                <input asp-for="Modulo" class="form-control" />
                <span asp-validation-for="Modulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permiso" class="control-label"></label>
                <input asp-for="Permiso" class="form-control" />
                <span asp-validation-for="Permiso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
